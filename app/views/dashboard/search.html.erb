<div class="container">
  <div class="row search-result">
    <% @readers.each do |reader| %>
    <div class="col-md-10 col-xs-offset-1 well member">
      <%= reader.full_name %>
      <% if current_user %>
        <%= link_to "Follow", friendships_path(friend_id: reader.id), method: :post, class: "btn btn-primary pull-right" unless current_user.follows_or_same?(reader) %>
      <% end %>      
    </div>
    <% end %>
  </div>
  <%= will_paginate @readers, renderer: BootstrapPagination::Rails %>
</div>