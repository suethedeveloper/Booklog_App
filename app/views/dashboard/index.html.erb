<div class="jumbotron">
  <h1>Book Reading Lounge</h1>
  <p>Share your booklog with your friends and family</p>
</div>
<div class="row">
  <div class="col-md-10">
    <h2>List of Members</h2>
    <%= will_paginate @readers, renderer: BootstrapPagination::Rails, class: "pull-left paginate" %>
  </div>
</div>

<div class="row">
  <% @readers.each do |reader| %>
  <div class="col-md-10 well member">
    <%= reader.full_name %> 
    <% if current_user %>
      <%= link_to "Follow", friendships_path(friend_id: reader.id), method: :post, class: "btn btn-primary pull-right" unless current_user.follows_or_same?(reader) %>
    <% end %>
  </div>
  <% end %>
</div>