      <section>
        <ul class="log-list">

        <% @logs.each do |log| %>
          <li class="log<%= log.id %> book-thum">
            <ul>
              <li><strong><%= log.title %></strong> by <%= log.author %></li>
              <li class="text-right small"><%= log.reading_date %> | <%= log.duration_in_min %> minutes</li>
              <li><hr></li>
              <li class="note"><em><%= truncate(log.note, length: 100) %></em></li> 
              <li class="text-right small">
                <%= link_to "Edit This Log", [:edit, current_user, log] %> | <%= link_to "Delete", [current_user, log], method: :delete,
                                                      data: {confirm: "Are you sure?" } %>
              </li>
            </ul>
          </li>
        <% end %> 

        </ul>
      </section>
      <p>
        <%= content_tag :div, "", id: "chart", data: {logs: @logs} %>    
      </p>
