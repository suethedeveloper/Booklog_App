<div class="col-md-8 col-xs-12">
  <% unless @reading_logs.empty? %>
  <h1>Listing Reading Logs</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Book Title</th>
        <th>Author</th>
        <th>Reading Date</th>
        <th>Duration (min)</th>
        <th>Notes</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @reading_logs.each do |log| %>
      <tr>
        <td><%= log.title %></td>
        <td><%= log.author%></td>
        <td><%= log.reading_date %></td>
        <td><%= log.duration_in_min %></td>
        <td><%= truncate(log.note, length: 100) %></td>
        <td><%= link_to "Show", [current_user, log] %></td>
        <td><%= link_to "Edit", [:edit, current_user, log] %></td>
        <td><%= link_to "Delete", [current_user, log], method: :delete,
                                  data: {confirm: "Are you sure?" } %></td>
      </tr>
      <% end %>      
    </tbody>
  </table>
  <% else %>
  <div class="alert alert-danger message-font text-center" role="alert">No Reading Log Yet</div>
  <br>
  <% end %>
  
  <%= link_to "New Reading Log", new_user_reading_path(current_user), clas: "btn btn-primary link" %>
  <%= content_tag :div, "", id: "chart", data: {logs: @reading_logs} %>
</div>

<div class="col-md-4 col-xs-12">
  <h1 class="text-center">My Friends</h1>
  <% @friends.each do |friend| %>
    <div class="col-md-offset-3 col-md-6 friend_name">
      <%= link_to friend.full_name, friendship_path(current_user.current_friendship(friend)) %>
    </div>
    <div class="col-md-3 btn-unfollow">
      <%= link_to "Unfollow", friendship_path(current_user.current_friendship(friend)), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-primary link" %>
    </div>
  <% end %>
</div>