<div class='row'>
  <div class='col-md-12'>
  <%= form_for([current_user, @reading], :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <% if @reading.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reading.errors.count, "error") %>
      prohibited this reading log from being saved: </h2>
      <ul>
      <% @reading.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <div class="control-label col-md-2">
      <%= f.label :title, "Book Title" %><br>
      </div>
      <div class="col-md-10">
      <%= f.text_field :title %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-md-2">
      <%= f.label :author, "Author" %><br>
      </div>
      <div class="col-md-10">
      <%= f.text_field :author %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
      <%= f.label :note, "Notes" %><br>
      </div>
      <div class="col-md-10">
      <%= f.text_area :note, class: "form-control", rows: "10" %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
      <%= f.label :reading_date, "Reading Date" %>
      </div>
      <div class="col-md-10">
      <%= f.text_field :reading_date, class: "form-control"%>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
      <%= f.label :duration_in_min, "Duration (min)" %>
      </div>
      <div class="col-md-10">
      <%= f.number_field :duration_in_min, class: "form-control" %>
      </div>
    </div>    
    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
      <%= f.submit "Create Reading Log", class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  <% end %>
  </div>
</div>